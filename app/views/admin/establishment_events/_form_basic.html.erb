<% if @establishment.cover %>
  <div class="form-group image">
    <label class="form-control-label">
      Capa
    </label>
    <div class="clearfix">
      <%= image_tag @event.cover.url(:thumb) %>
    </div>
  </div>
<% end %>
<%= f.input :cover, as: :file, label: false %>
<hr />

<%= f.input :name %>
<%= f.input :description, hint: 'Entre 30 à 500 carácteres', input_html: { rows: 6 } %>

<hr />
<div class="row">
  <div class='col-sm-6'>
    <div class="form-group">
      <label class="form-control-label">
        Inicia em
      </label>
      <div class='input-group date' id='starts-at-picker'>
        <input type="text" class="form-control" name="event[starts_at]">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class='col-sm-6'>
    <div class="form-group">
      <label class="form-control-label">
        Inicia em
      </label>
      <div class='input-group date' id='ends-at-picker'>
        <input type="text" class="form-control"  name="event[ends_at]">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
</div>
