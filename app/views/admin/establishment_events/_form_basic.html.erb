<%= f.input :name %>
<% if @event.cover %>
  <%= image_tag @event.cover.url(:thumb) %>
<% end %>
<%= f.input :cover, as: :file %>
<%= f.input :description, hint: 'Entre 30 à 500 carácteres', input_html: { rows: 6 } %>
<%= f.input :starts_at %>
<%= f.input :no_time_to_end, hint: 'Marque se o evento não tiver hora exata para acabar', input_html: { id: 'event-no-end' } %>
<%= f.input :ends_at, input_html: { class: 'event-ends-at'} %>
