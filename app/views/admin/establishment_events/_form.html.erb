<%= simple_form_for [:admin, @establishment, 'establishment', event], html: { multipart: true } do |f| %>
  <% if event.errors.any? %>
    <div class="alert alert-warning">
      <div>
        <b>Ops! <%= pluralize(event.errors.count, "erros") %> ocorreram:</b>
      </div>
      <br />
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <hr />
  <% end %>

  <%= render "admin/shared/notice" %>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link <%= 'active' unless params[:show_img_tab].present? %>" data-toggle="tab" href="#form-basic" role="tab">Dados b√°sicos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#form-visibility" role="tab">Visibilidade</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane <%= 'active' unless params[:show_img_tab].present? %>" id="form-basic" role="tabpanel">
      <%= render 'form_basic', f: f %>
    </div>
    <div class="tab-pane" id="form-visibility" role="tabpanel">
      <%= render 'form_visibility', f: f %>
    </div>
  </div>

  <hr>

  <div class="actions">
    <%= f.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
