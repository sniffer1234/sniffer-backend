<% if @establishment.cover %>
    <%= image_tag @establishment.cover.url(:thumb) %>
<% end %>
<%= f.input :cover, as: :file %>
<% if @establishment.avatar %>
    <%= image_tag @establishment.avatar.url(:thumb) %>
<% end %>
<%= f.input :avatar, as: :file %>
<%= f.input :name %>
<%= f.input :small_business_hours_description, hint: 'Entre 5 à 35 carácteres', input_html: { rows: 6 } %>
<%= f.input :business_hours_description, hint: 'Entre 15 à 1500 carácteres', input_html: { rows: 6 } %>
<%= f.input :small_description, hint: 'Entre 30 à 250 carácteres', input_html: { rows: 6 } %>
<%= f.input :description, hint: 'Entre 30 à 1500 carácteres', input_html: { rows: 6 } %>
<%= f.input :email %>
<%= f.input :site %>
<%= f.input :facebook %>
<%= f.input :instagram %>
<%= f.input :phone, input_html: { class: 'phone' }  %>
