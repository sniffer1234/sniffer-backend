<%= f.input :vip, hint: 'Se selecionado, estabelecimento aparecerá sempre no topo' %>
<%= f.input :visible, hint: 'Se não estiver selecionado, estabelecimento não irá ser exibido' %>

<% if @establishment.aprooved == false %>
  <%= f.input :aprooved %>
  <% if @establishment.suggestion_message %>
    <div class="alert alert-info">
      <b>Mensagem do usuário:</b>
      <%= @establishment.suggestion_message %>
    </div>
  <% end %>
<% end %>
